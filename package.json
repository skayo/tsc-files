{
  "name": "@jonasgeiler/tsc-files",
  "version": "2.2.2",
  "description": "A tiny tool to run tsc on specific files without ignoring tsconfig.json",
  "homepage": "https://github.com/skayo/tsc-files#readme",
  "bugs": "https://github.com/skayo/tsc-files/issues",
  "license": "MIT",
  "author": "Jonas Geiler <npm@jonasgeiler.com> (https://skayo.dev)",
  "repository": "github:skayo/tsc-files",
  "scripts": {
    "lint": "xo",
    "fix": "xo --fix",
    "check": "tsc",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@types/node": "^20.8.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "typescript": "^5.2.2",
    "xo": "^0.56.0"
  },
  "type": "module",
  "bin": "./cli.js",
  "exports": {
    "./package.json": "./package.json"
  },
  "files": [
    "./cli.js"
  ],
  "engines": {
    "node": "^18 || >=20"
  },
  "xo": {
    "rules": {
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "array-bracket-spacing": [
        "error",
        "always"
      ],
      "no-new-func": "off"
    }
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx,ts,mts,cts,tsx}": [
      "xo",
      "node ./cli.js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "keywords": [
    "tsc-files",
    "tsc",
    "typescript",
    "check",
    "type-check",
    "compile",
    "tsconfig",
    "lint-staged"
  ]
}